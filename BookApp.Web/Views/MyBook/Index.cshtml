@using BookApp.Web.ViewModels.MyBook;
@model List<IndexMyBooViewModel>

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <form asp-action="AddToReadList" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@book.Id" />
                        <button class="btn btn-success" @(book.IsInReadList ? "disabled" : "")>
                            Add to Read List
                        </button>
                    </form>

                    <form asp-action="AddToWantToReadList" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@book.Id" />
                        <button class="btn btn-primary" @(book.IsInWantToReadList ? "disabled" : "")>
                            Add to Want to Read List
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
