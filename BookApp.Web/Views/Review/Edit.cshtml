@using BookApp.Web.ViewModels.Review
@model EditReviewViewModel

<h2>Edit Review</h2>

<form method="post" asp-action="Edit" asp-controller="Review">
    @Html.AntiForgeryToken()
    <input type="hidden" name="ReviewId" value="@Model.Id" />
    <input type="hidden" name="BookId" value="@Model.BookId" />

    <div class="form-group">
        <label for="Rating">Rating (1-5):</label>
        <input type="number" id="Rating" name="Rating" class="form-control" value="@Model.Rating" min="1" max="5" required />
    </div>

    <div class="form-group">
        <label for="ReviewText">Review:</label>
        <textarea id="ReviewText" name="ReviewText" class="form-control" rows="4" required>@Model.ReviewText</textarea>
    </div>

    <div class="form-group">
        <label for="ReviewDate">Date:</label>
        <input type="date" id="ReviewDate" name="ReviewDate" class="form-control" value="@Model.ReviewDate.ToString("yyyy-MM-dd")" required />
    </div>

    <p></p>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Details" asp-controller="Book" asp-route-id="@Model.BookId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}