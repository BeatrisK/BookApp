@using BookApp.Web.ViewModels.Book
@model IEnumerable<BookIndexViewModel>

@{
    ViewData["Title"] = "All Books";
}

<h2>Books</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Add New Book</a>
</div>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm"> 
                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text">@book.Author</p>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary">View Book Details</a>
                </div>
            </div>
        </div>
    }
</div>
