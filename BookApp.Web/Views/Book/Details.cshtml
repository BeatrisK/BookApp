@using BookApp.Web.ViewModels.Book
@model BookDetailsViewModel

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <div>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid" style="max-width: 100%; height: auto;" alt="@Model.Title" />
                }
                else
                {
                    <img src="/img/no-image-available.jpg" class="img-fluid" style="max-width: 100%; height: auto;" alt="No Image Available" />
                }
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">@Model.Title</h3>
                    <h5 class="card-subtitle mb-2 text-muted">@Model.Author</h5>
                    <p class="card-text">@Model.Genre</p>

                    <hr />

                    <p class="card-text">
                        <small class="text-muted">
                            <strong>Pages:</strong> @Model.Pages
                        </small>
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            <strong>Publisher:</strong> @Model.Publisher
                        </small>
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            <strong>Description:</strong> @Model.Description
                        </small>
                    </p>

                    <div class="row mt-4">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="col-md-6 d-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary flex-fill mx-1">Edit</a>
                            </div>
                        }
                        <div class="col-md-6 d-flex justify-content-center">
                            <a asp-action="Index" asp-controller="Review" asp-route-bookId="@Model.Id" class="btn btn-success flex-fill mx-1">
                                View Reviews
                            </a>
                        </div>            
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-6 d-flex justify-content-center">
                            <a asp-action="Index" asp-controller="Book" class="btn btn-warning flex-fill mx-1">Back</a>
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="col-md-6 d-flex justify-content-center">
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this book?');">Delete</a>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
