@using BookApp.Web.ViewModels.Admin.UserManagеment
@model IEnumerable<AllUsersViewModel>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">User Management</h1>

    <div class="table-responsive">
        <table class="table table-hover table-striped shadow-sm rounded-3">
            <thead class="bg-primary text-white">
                <tr class="text-center">
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="align-middle">
                        <td>@user.Email</td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                <span class="badge bg-info">@role</span>
                            }
                        </td>
                        <td class="text-center">
                            <form method="post" asp-action="AssignRole" asp-controller="UserManagement" asp-area="Admin" class="d-inline">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <div class="input-group mb-2">
                                    <select name="role" class="form-select">
   
                                        <option value="Admin">Admin</option>
                                        <option value="User">User</option>
                                    </select>
                                    <button type="submit" class="btn btn-outline-success btn-sm ms-2">
                                        <i class="fas fa-user-plus"></i> Assign
                                    </button>
                                </div>
                            </form>

                            <form method="post" asp-action="RemoveRole" asp-controller="UserManagement" asp-area="Admin" class="d-inline ms-2">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <div class="input-group mb-2">
                                    <select name="role" class="form-select">
                                        @foreach (var role in user.Roles)
                                        {
                                            <option value="@role">@role</option>
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-outline-warning btn-sm ms-2">
                                        <i class="fas fa-user-times"></i> Remove
                                    </button>
                                </div>
                            </form>

                            <form method="post" asp-action="DeleteUser" asp-controller="UserManagement" asp-area="Admin" class="d-inline ms-2">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm ms-2">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

