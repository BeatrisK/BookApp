@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-dark">Admin Dashboard</h1>
        <p class="lead text-muted">Manage users and roles below:</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="background-color: #f8f9fa;">
                <div class="card-body text-center">
                    <i class="fas fa-user-shield fa-5x text-success mb-4"></i>
                    <h5 class="card-title text-dark">Manage Users</h5>
                    <p class="card-text text-muted mb-4">Add, edit, or delete users and manage their roles.</p>
                    <a href="@Url.Action("Index", "UserManagement", new { area = "Admin" })"
                       class="btn btn-outline-success btn-lg" style="transition: 0.3s;">
                        Go to User Management
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
